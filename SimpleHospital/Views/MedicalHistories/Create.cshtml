@model SimpleHospital.Models.MedicalHistory

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>MedicalHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PacientId" class="control-label"></label>
                <select asp-for="PacientId" class ="form-control" asp-items="ViewBag.PacientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Symptoms" class="control-label"></label>
                <input asp-for="Symptoms" class="form-control" />
