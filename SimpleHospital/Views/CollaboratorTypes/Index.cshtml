@model IEnumerable<SimpleHospital.Models.CollaboratorType>

@{
    ViewData["Title"] = "Index";
}

<h2>Types of Collaborators</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollaboratorTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollaboratorTypes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.CollaboratorTypeId" class="text-success"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.CollaboratorTypeId" class="text-info"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.CollaboratorTypeId" class="text-danger"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
