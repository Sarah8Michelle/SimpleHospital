@model IEnumerable<SimpleHospital.Models.FileUpload>
@{
    ViewData["Title"] = "Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>This is your list of files</h2>

<p>
    <a asp-action="Create">Upload new file</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model){
        <tr>
            <td>
                <p> @Html.ActionLink(item.FileName, "View PDF", "FileUploads", new { fileName = item.FileName }, null) </p>
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="text-success"><i class="fas fa-edit"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
